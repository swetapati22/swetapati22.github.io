<div class="col">
  <a href="{% if research.redirect %}{{ research.redirect }}{% else %}{{ research.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if research.img %}
        {%
          include figure.liquid
          loading="eager"
          path=research.img
          sizes = "250px"
          alt="research thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ research.title }}</h2>
        <p class="card-text">{{ research.description }}</p>
      </div>
    </div>
  </a>
</div>
